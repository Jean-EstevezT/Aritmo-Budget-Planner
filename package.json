{
  "name": "aritmo",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "electron/main.js",
  "productName": "Aritmo",
  "description": "Aritmo - Budget Planner",
  "license": "GPL-3.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "wait-on tcp:3000 && cross-env NODE_ENV=development electron .",
    "electron:pack": "electron-builder --dir",
    "electron:dist": "vite build && electron-builder",
    "dev:electron": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"npm run electron\""
  },
  "build": {
    "appId": "com.aritmo.app",
    "productName": "Aritmo",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "resources/**/*"
    ],
    "win": {
      "icon": "resources/favicon.ico",
      "target": [
        "nsis"
      ]
    },
    "mac": {
      "icon": "resources/logo512.png"
    },
    "linux": {
      "icon": "resources/logo512.png"
    }
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.89.0",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^17.2.3",
    "lucide-react": "^0.559.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "recharts": "^3.5.1"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  }
}
